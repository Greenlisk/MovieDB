<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:fragment="com.example.iserbai.moviedb.MainDescriptionFragment">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/poster_for_description"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:contentDescription="@string/poster_description"
        android:src="@drawable/stars"
        />
    <TextView
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:id="@+id/title_view"
        android:layout_toRightOf="@+id/poster_for_description"
        android:layout_toEndOf="@+id/poster_for_description"
        android:text="@string/title_sample"/>
    <TextView
        android:id="@+id/overview"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:layout_below="@+id/poster_for_description"
        android:text="@string/overview_sample"/>
    </RelativeLayout>>
</ScrollView>